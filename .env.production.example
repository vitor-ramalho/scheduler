# ===========================================
# SCHEDULER - PRODUCTION ENVIRONMENT
# ===========================================
# Copy this file to .env and fill with your production values
# DO NOT commit .env to version control!

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=scheduler_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=scheduler_production

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate a secure random string (64+ characters recommended)
# Use: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_STRING_HERE
JWT_EXPIRES_IN=30d

# ===========================================
# URLS
# ===========================================
# Replace with your actual domain
API_URL=https://api.seudominio.com
CLIENT_URL=https://seudominio.com
NEXT_PUBLIC_API_URL=https://api.seudominio.com

# ===========================================
# PAYMENT PROVIDER
# ===========================================
ABACATE_PAY_SECRET_KEY=your-abacate-pay-secret-key-here

# ===========================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ===========================================
# Follow HOW_TO_GET_EMAIL_CREDENTIALS.md to setup
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app-aqui
MAIL_FROM="Scheduler <noreply@seudominio.com>"

# ===========================================
# OPTIONAL: MONITORING & LOGGING
# ===========================================
# SENTRY_DSN=your-sentry-dsn-here
# LOG_LEVEL=info

# ===========================================
# OPTIONAL: BACKUPS
# ===========================================
# BACKUP_RETENTION_DAYS=7
# BACKUP_S3_BUCKET=your-s3-bucket-name
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
